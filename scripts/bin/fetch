#!/usr/bin/env bash
#
# very simple fetch

# FETCH

# colors
t=$(tput sgr0)
a=$(tput setaf 11)

# infos
wm=bspwm
sh=$(basename "$SHELL")
os=$(. /etc/os-release && echo "$ID")
pkg=$(dpkg --get-selections | grep -cv deinstall)
font=$(xrdb -query | grep -m1 font | cut -d- -f3)

# OUTPUT

cat << EOF

${a}os${t}:          ${os}
${a}shell${t}:       ${sh}
${a}packages${t}:    ${pkg}
${a}font${t}:        ${font}
${a}wm${t}:          ${wm}

EOF
