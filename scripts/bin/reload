#!/bin/sh
#
# reload various programs

# fix directory
cd "$HOME" || exit

pk() {
    pgrep -x "$1" > /dev/null &&
        pkill -x "$1"
}

reload_bspwm() {
    pk sxhkd
    pk lemonbar

    "${HOME}/.config/bspwm/bspwmrc"

    # fix fullscreen
    sleep .5s
    xdo lower -a bar
}

reload_dunst() {
    pk dunst

    dunst &
}

reload_bspwm &
reload_dunst &
