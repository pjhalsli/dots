#!/usr/bin/env bash
#
# reload various programs

# fix directory
cd "$HOME" || exit

pk() {
    pgrep -x "$1" &> /dev/null && \
        pkill -x "$1"
}

utils() {
    pk sxhkd
    pk dunst
    pk lemonbar

    "${HOME}/.config/bspwm/bspwmrc"
    dunst

    # fix fullscreen
    sleep .5s
    xdo lower -a bar
}

utils &
