wks() {
    bspc subscribe |
        while read -r event; do
            # we want word splitting
            IFS=:; set -- $event; var=

            for i in "$@"; do
                case ${i%?} in
                    [OFU]) var=$var;;
                    [ofu]) var=$var
                esac
            done

            echo "W$var"
        done
}

# vim: ft=sh
