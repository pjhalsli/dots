ntw() {
    # ensure network block isn't empty on startup
    { echo 'Not-Associated'; iwevent 2> /dev/null; } |
        while read -r event; do
            case $event in
                *'Not-Associated'*)
                    var=$(iwgetid -r)
                    var=${var:-Disconnected}
                    ;;
                *'New Access Point'*)
                    until var=$(iwgetid -r); do
                        sleep .2
                    done
                    ;;
                *) continue
            esac

            echo "Nî€ƒ $var"
        done
}

