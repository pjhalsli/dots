#!/bin/sh
#
# bspwm config

cfg () bspc config "$@"

# ---
# settings
# ---

bspc monitor -d 1 2 3 4 5

cfg focus_follows_pointer true
cfg borderless_monocle true
cfg gapless_monocle true
cfg single_monocle true

cfg presel_feedback_color '#EEEEEE'
cfg focused_border_color '#EEEEEE'
cfg normal_border_color '#DCDCDC'

cfg border_width 6
cfg window_gap 6

# ---
# utils
# ---

cfg external_rules_command "$(command -v rules)"

pgrep -x panel  > /dev/null || panel &
pgrep -x 2bspwm > /dev/null || 2bspwm &
