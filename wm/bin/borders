#!/bin/sh
#
# double borders

# get values from bspwm config
s=$((`bspc config border_width` / 2))
color1=$(bspc config normal_border_color);  color1=0x${color1#?}
color2=$(bspc config focused_border_color); color2=0x${color2#?}

draw ()
{
    case $1 in
        normal)  a=$color1; b=$color2;;
        focused) a=$color2; b=$color1
    esac

    shift

    chwb2 -I "$a" -O "$b" -i "$s" -o "$s" "$@" 2> /dev/null
}

# initial draw, and then subscribe to events
{ echo; bspc subscribe node_geometry node_focus; } |
    while read -r var; do
        draw normal  $(bspc query -N -n .descendant_of.window)
        draw focused $(bspc query -N -n .!descendant_of.window)
    done
