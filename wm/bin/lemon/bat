#!/bin/sh
#
# get battery status
#
# lemonbar script

while :; do
    var=$(cat /sys/class/power_supply/BAT0/capacity)

    if [ "$var" -eq 100 ]; then
        out="$(icon ) $var%"
    elif [ "$var" -gt 75 ]; then
        out="$(icon ) $var%"
    elif [ "$var" -gt 25 ]; then
        out="$(icon ) $var%"
    else
        out="$(icon ) $var%"
    fi
    echo "B$out"

    sleep 10s
done
