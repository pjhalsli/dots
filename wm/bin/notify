#!/bin/sh
#
# send a notification using lemonbar
#
# wm tool

# SETTINGS

padding=20
offset_x=30
offset_y=60
time=5

# SCRIPT

# kill previous notification
pkill -f "lemonbar .* -d"

while [ "$#" -gt 0 ]; do
    case $1 in
        -t) time="$2";;
        -m) text="$2";;
    esac
    shift
    shift
done

# get notification dimensions
# https://github.com/marinhoc/bin/tree/master/fts
var=$(fts -w ~/.fonts/cherry.pcf)
width=$(echo "${#text} * $var + 2 * $padding" | bc)

var=$(fts -h ~/.fonts/cherry.pcf)
height=$(echo "$var + 2 * $padding" | bc)

# get notification offset
var=$(bspc query -T -m | jq .rectangle.width)
offset_x=$(echo "$var - $offset_x - $width" | bc)

( echo "%{c}$text"; sleep "$time" ) |\
    lemonbar -g "${width}x${height}+${offset_x}+${offset_y}" \
    -f "-t-cherry-medium-r-normal--10-100-75-75-c-100-iso8859-1" \
    -B \#EEEEEE \
    -F \#021B21 \
    -d &
