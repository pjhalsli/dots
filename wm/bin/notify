#!/bin/sh
#
# send a notification using lemonbar
#
# wm tool

# SETTINGS

height=40
font_size=6
offset_x=30
offset_y=60
time=5

# SCRIPT

while [ "$#" -gt 0 ]; do
    case "$1" in
        -t) { shift; time="$1"; };;
        *) text="$1";;
    esac
    shift
done

# get notification width
var=$(echo "  $text  " | wc -m)
width=$((var * font_size))

# get notification offset
var=$(bspc query -T -m | jq '.rectangle.width')
offset_x=$((var - offset_x - width))

# kill previous notification
pkill -f "lemonbar .* -d"

( echo "%{c}${text}"; sleep "$time" ) |\
    lemonbar -g "${width}x${height}+${offset_x}+${offset_y}" \
    -f -*-cherry-* \
    -B \#EEEEEE \
    -F \#021B21 \
    -d &
