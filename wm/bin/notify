#!/usr/bin/env bash
#
# lemonbar notification
#
# wm script

name=notify

. ~/.config/lemonbar/notify

# kill previous notification
pkill -f "lemonbar .* $name .*"

# get popup dimensions
read -r w h < <(txtf "$font" "$1")

((w += 2 * padding))
((h += 2 * padding))

((off_x = `bspc query -T -m | jq .rectangle.width` - w - off_x))
((off_y = `bspc query -T -m | jq .rectangle.height` - h - off_y))

{
    echo "%{c}$1"
    sleep "$time"
} | lemonbar -g "${w}x${h}+$off_x+$off_y" \
    -F "$foreground" \
    -B "$background" \
    -f "$font" \
    -n "$name" \
    -d &
