#!/bin/sh
#
# remote volume control
#
# wm key bindings

not() {
    # send notifications when fullscreen
    if bspc query -N -n .local.focused.fullscreen > /dev/null; then
        var=$(amixer sget Master | grep -om1 '[0-9]*%')
        notify -t 3 -m "Volume : $var"
    fi
}

vol() {
    amixer -q sset Master "$1"
}

case $1 in
    up) vol 5%+; not;;
    down) vol 5%-; not;;
    toggle) vol toggle;;
esac
