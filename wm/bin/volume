#!/bin/sh
#
# volume control
#
# wm key bindings

if [ "$1" = toggle ]; then
    pactl set-sink-mute 0 toggle
else
    pactl set-sink-volume 0 "$1"

    # send a notification when fullcreen
    if bspc query -N -n .local.fullscreen > /dev/null; then
        var=$(pactl list sinks)

        # we want word splitting
        set -- ${var#*Volume:}
        notify "Volume : $4"
    fi
fi
