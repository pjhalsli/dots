#!/bin/sh
#
# lemonbar
#
# wm tool

# SETTINGS

a='%{B#FF99A1}'
b='%{B#234149}'
t='%{B-}'

fifo=/tmp/bar

# FIFO

[ -e "$fifo" ] && rm "$fifo"
mkfifo "$fifo"

wks() {
    bspc subscribe | while read -r line; do
        out=
        var=$(echo "$line" | grep -om1 '[OFU][1-5]' | tail -c2)
        for i in $(seq 1 5); do
            if [ "$var" -eq "$i" ]; then
                out="$out$a  $i  "
            else
                out="$out$b  $i  "
            fi
        done
        echo "W$out$t"
    done
}
wks > "$fifo" &

clk() {
    while :; do
        date +'C%A %R'

        sleep 10s
    done
}
clk > "$fifo" &

ntw() {
    while :; do
        var=$(iwgetid -r)
        echo "N$b  ${var:-Offline}  $t"

        sleep 1s
    done
}
ntw > "$fifo" &

bat() {
    while :; do
        var=$(cat /sys/class/power_supply/BAT0/capacity)
        echo "B$a  $var%  $t"

        sleep 10s
    done
}
bat > "$fifo" &

# MAIN

while read -r line; do
    case $line in
        W*) wks=${line#?};;
        C*) clk=${line#?};;
        N*) ntw=${line#?};;
        B*) bat=${line#?};;
    esac
    echo "%{l}${wks}%{c}${clk}%{r}${ntw}${bat}"
done < "$fifo" | lemonbar -g x30 \
    -f "-t-cherry-medium-r-normal--10-100-75-75-c-100-iso8859-1" \
    -B \#021B21 \
    -F \#E8DFD6
