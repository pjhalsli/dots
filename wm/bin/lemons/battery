# get battery status
#
# lemonbar script

bat ()
    while :; do
        var=$(cat /sys/class/power_supply/BAT0/capacity)

        if [ "$var" -eq 100 ]; then
            icon=
        elif [ "$var" -gt 75 ]; then
            icon=
        elif [ "$var" -gt 25 ]; then
            icon=
        else
            icon=
        fi
        echo "B$a$icon$t $var%"

        sleep 10
    done

# vim: ft=sh
