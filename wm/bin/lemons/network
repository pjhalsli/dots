# sourced by 'panel'

file=/tmp/ssid

# ensure network block isn't empty on startup
test -e "$file" || echo > $file

ntw ()
{
    # https://raw.github.com/turquoise-hexagon/bin/master/ssid
    tail -n 1 -f "$file" |
        while read -r var; do
            var=${var:-Disconnected}

            echo "N$aî„¿$t $var"
        done
}

