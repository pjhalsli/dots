ntw ()
{
    file=/tmp/ssid

    # ensure network block isn't empty on startup
    { echo init; inotifywait -qme close_write "$file"; } |
        while read -r event; do
            read -r var < $file

            echo "N$aî„¿$t $var"
        done
}

# vim: ft=sh
