# sourced by 'panel'

file=/tmp/ssid

# ensure the block isn't empty on startup
test -e "$file" || echo > $file

ntw ()
{
    # https://raw.github.com/turquoise-hexagon/bin/master/ssid
    tail -f "$file" 2> /dev/null |
        while read -r event; do
            read -r var < $file

            echo "N$aî„¿$t ${var:-Disconnected}"
        done
}

