#!/bin/sh
#
# get battery status
#
# lemonbar script

while :; do
    var=$(cat /sys/class/power_supply/BAT0/capacity)

    case $var in
        [0-9])  out="$(icon ) $var%";;
        [1-7]?) out="$(icon ) $var%";;
        *)      out="$(icon ) $var%";;
    esac
    echo "B$out"

    sleep 10s
done
