#!/bin/sh
#
# lemonbar script

name=panel

. ~/.config/lemonbar/config

# accent colors
a=%{B$accent1}
b=%{B$accent2}
c=%{B$accent3}

if xdo id -a "$name" > /dev/null; then
    echo 'error : panel already running' >&2
    exit 1
fi

# ensure proper panel script cleanup
trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

# source all panel modules
for file in ~/.wm/visual/lemons/*; do
    . "$file"
done

for func in wks mus clk ntw vol bat; do
    "$func" &
done |
    while read -r event; do
        case $event in
            # remove identifier
            W*) wks=${event#?};;
            M*) mus=${event#?};;
            C*) clk=${event#?};;
            N*) ntw=${event#?};;
            V*) vol=${event#?};;
            B*) bat=${event#?}
        esac

        echo "%{l}$a  $wks  $c  $mus  %{B-}%{c}$clk%{r}$c  $ntw  $b  $vol  $bat  %{B-}"
    done |
        lemonbar -g "x$height" \
            -F "$foreground" \
            -B "$background" \
            -f "$icons" \
            -f "$font" \
            -n "$name" &

# ensure proper fullscreen
xdo lower -m -a "$name"

wait
