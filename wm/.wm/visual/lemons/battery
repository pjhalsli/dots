bat()
    while :; do
        read -r var < /sys/class/power_supply/BAT0/capacity

        case $((var / 25)) in
            0) icon=;;
            1) icon=;;
            2) icon=;;
            3) icon=;;
            4) icon=
        esac

        echo "B$icon $var%"

        sleep 10
    done

# vim: ft=sh
