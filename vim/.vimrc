" SETTINGS

filetype indent plugin on
syntax on
set nocompatible
set encoding=utf8
set hidden
set noswapfile

set autoindent
set wrap
set linebreak
set breakindent

set backspace=indent,eol,start
set expandtab
set tabstop=4
set shiftwidth=4
set shiftround

set hlsearch
set incsearch
set ignorecase

set noruler
set nonumber
set shortmess=actI

" sh fix
let g:is_posix=1

" THEMING

colorscheme cherry
