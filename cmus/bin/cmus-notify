#!/usr/bin/env bash
#
# send a notification on cmus update
#
# cmus tool

while [[ $# -gt 2 ]]; do
    printf -v "$1" "%s" "$2"
    shift
    shift
done

# shellcheck disable=SC2154
if [[ $status == playing ]]; then
    # format ampersands for pango
    text="$title\n$artist - $album"
    text=${text//&/&amp;}

    notify-send -t 1000 "$text"
fi
