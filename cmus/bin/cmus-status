#!/bin/sh
#
# send notification on cmus update
#
# cmus script

while [ $# -gt 0 ]; do
    case $1 in
        title) title="$2";;
        status) status="$2"
    esac

    shift; shift
done

if [ "$status" = playing ]; then
    # clear previous notification
    xdotool key ctrl+space > /dev/null

    notify-send "$title"
fi
