#!/bin/sh
#
# send a notification on cmus update
# depends on `notify` (wm package)
#
# cmus script

# parse datas from cmus
while [ $# -ge 2 ]; do
    case $1 in
        title) title="$2";;
        status) status="$2"
    esac

    shift; shift
done

[ "$status" = playing ] &&
    notify -t 3 -m "$title"
