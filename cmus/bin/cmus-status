#!/bin/sh
#
# send a notification on cmus update
# depends on https://github.com/marinhoc/dots/tree/master/wm/bin/notify
#
# cmus script

while [ $# -ge 2 ]; do
    case $1 in
        title) title="$2";;
        status) status="$2"
    esac
    shift
    shift
done

[ "$status" = playing ] &&
    notify -t 3 -m "$title"
