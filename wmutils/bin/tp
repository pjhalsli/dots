#!/bin/sh
#
# teleport window
#
# wmutils

# +---+---+
# | 1 | 3 |
# +---5---+
# | 2 | 4 |
# +---+---+

[ "$2" ] && id="$2" || id=$(pfw)

root=$(lsw -r)

case "$1" in
    1)
        x=0
        y=0
        ;;
    2)
        x=0
        y=$(wattr h "$root")
        ;;
    3)
        x=$(wattr w "$root")
        y=0
        ;;
    4)
        x=$(wattr w "$root")
        y=$(wattr h "$root")
        ;;
    5)
        x=$(echo "$(wattr w "$root") / 2" | bc)
        y=$(echo "$(wattr h "$root") / 2" | bc)
        ;;
esac

wmv -a "$x" "$y" "$id"
