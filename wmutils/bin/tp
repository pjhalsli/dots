#!/bin/sh
#
# teleport window
#
# wmutils

# +---+---+
# | 1 | 3 |
# +---5---+
# | 2 | 4 |
# +---+---+

[ "$2" ] && id="$2" || id=`pfw`

root=`lsw -r`

w=$(wattr w "$root")
h=$(wattr h "$root")

case "$1" in
    1)
        x=0
        y=0
        ;;
    2)
        x=0
        y="$h"
        ;;
    3)
        x="$w"
        y=0
        ;;
    4)
        x="$w"
        y="$h"
        ;;
    5)
        x=$((w/2))
        y=$((h/2))
        ;;
esac

wmv -a "$x" "$y" "$id"
