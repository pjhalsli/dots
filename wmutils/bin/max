#!/bin/sh
#
# maximize window
#
# wmutils

GAP=${GAP:-0}
PANEL=${PANEL:-0}

id=$(pfw)
root=$(lsw -r)

sw=$(wattr w "$root")
sh=$(wattr h "$root")

wb=$(wattr b "$id")
ww=$(wattr w "$id")
wh=$(wattr h "$id")

sp=$((2 * wb + 2 * GAP))

case "$1" in
    east)
        x=$((sw / 2 + GAP))
        y=$((PANEL + GAP))
        w=$((sw / 2 - sp))
        h=$((sh - sp - PANEL))
        ;;
    west)
        x="$GAP"
        y=$((PANEL + GAP))
        w=$((sw / 2 - sp))
        h=$((sh - sp - PANEL))
        ;;
    south)
        x="$GAP"
        y=$((sh / 2 + PANEL / 2 + GAP))
        w=$((sw - sp))
        h=$(((sh - PANEL) / 2 - sp))
        ;;
    north)
        x="$GAP"
        y=$((PANEL + GAP))
        w=$((sw - sp))
        h=$(((sh - PANEL) / 2 - sp))
        ;;
    center)
        x="$GAP"
        y=$((PANEL + GAP))
        w=$((sw - sp))
        h=$((sh - sp - PANEL))
        ;;
esac

wtp "$x" "$y" "$w" "$h" "$id"
