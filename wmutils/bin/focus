#!/bin/sh
#
# focus window in a given direction
#
# wmutils

#      north
#        |
# west --+-- east
#        |
#      south

border() {
    case "$1" in
        a) chwb -c 0xEEEEEE -s 5 "$2";;
        t) chwb -c 0x032C36 -s 5 "$2";;
    esac
}

case "$1" in
    east) id=$(closest east);;
    west) id=$(closest west);;
    south) id=$(closest south);;
    north) id=$(closest north);;
    0x*) wattr "$1" && id="$1";;
esac

# set borders
border a "$id"

for win in $(lsw | grep -v "$id"); do
    border t "$win"
done

# set focus
wtf "$id"

# set stacking order
chwso -r "$id"
