# MISC

XF86Audio{MicMute,Mute,RaiseVolume,LowerVolume}
    volume {capture,toggle,up,down}

XF86MonBrightness{Up,Down}
    xbacklight -{inc,dec} 10

XF86Audio{Prev,Next,Play}
    player {prev,next,play}

Print
    screenshot

super + Return
    urxvt

super + space
    rofi -show run

super + shift + r
    pkill -USR1 -x sxhkd

# WM

super + t
    tile

super + f
    fullscreen

super + q
    killw -p $(pfw)

super + r
    chwso -i $(pfw)

super + shift + q
    pkill -x wm

super + {h,j,k,l}
    max {west,south,north,east}

super + {y,b,u,n,g}
    tp {1-5}

super + {_,shift,alt} {Right,Left,Up,Down}
    {closest,move,resize} {east,west,north,south}

super + {_,shift} {ampersand,eacute,quotedbl,apostrophe,parenleft}
    workspaces {show,send} {1-5}

# MOUSE

super + @button1
    focus $(cursor)
