#!/usr/bin/env bash
#
# simple fetch

# set colors
t=$(tput sgr0)
a=$(tput setaf 11)

# FETCH

# shell
shell=$(basename "$SHELL")

# packages
packages=$(dpkg --get-selections | grep -cv deinstall)

# font
font=$(xrdb -query | grep -m1 font | cut -d- -f3)

# operating system
os="$(lsb_release -si) $(lsb_release -sr)"
os=${os,,}

# kernel
kernel=$(uname -r)
kernel=${kernel/-amd64}

# device model
model=$(< /sys/devices/virtual/dmi/id/product_version)
model=${model,,}

# window manager
wm=$(xprop -root -notype _NET_SUPPORTING_WM_CHECK)
wm=${wm##* }
wm=$(xprop -id "$wm" -notype -len 100 -f _NET_WM_NAME 8t)
wm=${wm/*_NET_WM_NAME = }
wm=${wm/\"}
wm=${wm/\"*}

# OUTPUT

cat << EOF

${a}os${t}:          ${os}
${a}kernel${t}:      ${kernel}
${a}model${t}:       ${model}
${a}shell${t}:       ${shell}
${a}packages${t}:    ${packages}
${a}font${t}:        ${font}
${a}wm${t}:          ${wm}

EOF
