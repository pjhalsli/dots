#!/usr/bin/env bash
#
# reload various programs

# fix directory issues
cd "$HOME" || exit

pk() {
    if pgrep "$1" &> /dev/null; then
        pkill -x "$1"
    fi
}

# bspwm
pk lemonbar
pk sxhkd

"${HOME}/.config/bspwm/bspwmrc"

# fix fullscreen
sleep 1
xdo lower -a bar

# dunst
pk dunst

dunst &
